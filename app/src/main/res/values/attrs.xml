<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="translationTextKey" format="string" />
    <attr name="translationLabelKey" format="string" />
    <attr name="translationHintKey" format="string" />

    <declare-styleable name="MSDTextView">
        <attr name="translationTextKey"/>
    </declare-styleable>

    <declare-styleable name="MSDPhoneInput">
        <attr name="phoneMask" format="string"/>
        <attr name="countryImage" format="reference"/>
    </declare-styleable>

    <declare-styleable name="MSDCodeInput">
        <attr name="disabledBackground" format="reference"/>
        <attr name="errorBackground" format="reference"/>
        <attr name="disabledTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MSDTextViewLoader">
        <attr name="translationTextKey"/>
    </declare-styleable>

    <declare-styleable name="MSDLabelTextView">
        <attr name="translationLabelKey"/>
    </declare-styleable>

    <declare-styleable name="MSDLabelIconTextView">
        <attr name="icon" format="reference"/>
        <attr name="translationLabelKey"/>
    </declare-styleable>

    <declare-styleable name="MSDEditText">
        <attr name="translationHintKey"/>
        <attr name="android:imeOptions"/>
        <attr name="android:inputType" />
        <attr name="android:textAllCaps" />
        <attr name="prefix" format="string"/>
        <attr name="prefixVisible" format="boolean"/>
        <attr name="android:lines"/>
    </declare-styleable>

</resources>
