<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    android:background="@drawable/rectangle_filled_white_radius_24dp">

    <include
        android:id="@+id/swipeAnchorLayout"
        layout="@layout/layout_bottom_sheet_swipe_anchor"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:tint="@color/secondary800"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/swipeAnchorLayout"
        app:srcCompat="@drawable/ic_back_24px" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/yourOrderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/suisse_bold"
        android:textColor="@color/secondary900"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backImageView"
        app:translationTextKey="Ваш заказ" />

    <com.custom.rgs_android_dom.views.MSDImageView
        android:id="@+id/orderImageView"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_secondary100_rounded_16dp"
        android:outlineProvider="background"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yourOrderTextView" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/orderNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:fontFamily="@font/suisse_regular"
        android:textColor="@color/secondary900"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/orderImageView"
        app:layout_constraintTop_toTopOf="@id/orderImageView"
        tools:text="Монтаж унитаза" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/orderRemainedTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:fontFamily="@font/suisse_regular"
        android:textColor="@color/secondary600"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/orderImageView"
        app:layout_constraintTop_toBottomOf="@id/orderNameTextView"
        app:translationTextKey="Работа займет ~3 часа"/>

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/orderCostTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:fontFamily="@font/suisse_regular"
        android:textColor="@color/secondary900"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/orderImageView"
        app:layout_constraintTop_toBottomOf="@id/orderRemainedTimeTextView"
        tools:text="1500 Р" />

</androidx.constraintlayout.widget.ConstraintLayout>
