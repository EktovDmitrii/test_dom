<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingEnd="57dp"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    tools:background="@color/secondary100">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suisse_regular"
        android:textSize="12sp"
        android:textColor="@color/secondary900_alpha56"
        android:includeFontPadding="false"
        android:layout_marginStart="52dp"
        android:text="Яна, консультант"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/chat_avatar_stub"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_filled_white_radius_16dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="16dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp">

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suisse_regular"
                android:textSize="16sp"
                android:textColor="@color/secondary900"
                android:includeFontPadding="false"
                android:lineSpacingExtra="24dp"
                android:lineSpacingMultiplier="0"
                tools:text="Он вышел не на свою полосу, когда я перестраивался. Сейчас расскажу звонком"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>