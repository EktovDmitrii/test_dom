<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_stroke_1dp_secondary_250_radius_8dp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/valueEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/iconImageView"
        android:background="@null"
        android:fontFamily="@font/suisse_regular"
        android:includeFontPadding="false"
        android:paddingVertical="14dp"
        android:paddingStart="16dp"
        android:textColor="@color/secondary900"
        android:textColorHint="@color/secondary300"
        android:textCursorDrawable="@drawable/cursor_primary_500"
        android:textSize="16sp"
        tools:hint="Placeholder" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingVertical="12dp"
        android:paddingEnd="12dp"
        android:tint="@color/secondary500"
        tools:src="@drawable/ic_calendar_24px" />

</RelativeLayout>