<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/swipeAnchorLayout"
        layout="@layout/layout_bottom_sheet_swipe_anchor" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="24dp"
            android:tint="@color/secondary800"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_24px" />

        <com.custom.rgs_android_dom.views.text.MSDTextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suisse_book"
            android:textColor="@color/secondary900"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:translationTextKey="Дом" />

        <com.custom.rgs_android_dom.views.text.MSDTextView
            android:id="@+id/subtitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/suisse_bold"
            android:gravity="center_horizontal"
            android:lines="1"
            android:textColor="@color/secondary900"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/moreImageView"
            app:layout_constraintStart_toEndOf="@+id/backImageView"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:translationTextKey="Редактировать данные" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/moreImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="24dp"
            android:tint="@color/secondary800"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_menu_24px" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:overScrollMode="never">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/secondary50"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/propertyImageView"
                    android:layout_width="match_parent"
                    android:layout_height="335dp"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="20dp"
                    android:scaleType="fitXY"
                    tools:src="@drawable/ic_type_apartment" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_filled_white_radius_16dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="16dp">

                    <com.custom.rgs_android_dom.views.text.MSDTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/my_service_bold"
                        android:textColor="@color/secondary900"
                        android:textSize="16sp"
                        app:translationTextKey="Информация" />

                    <com.custom.rgs_android_dom.views.text.MSDLabelTextView
                        android:id="@+id/addressTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:translationLabelKey="Адрес" />

                    <com.custom.rgs_android_dom.views.text.MSDLabelTextView
                        android:id="@+id/typeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:translationLabelKey="Тип объекта" />

                    <com.custom.rgs_android_dom.views.text.MSDLabelTextView
                        android:id="@+id/isOwnTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:translationLabelKey="В собственности" />

                    <com.custom.rgs_android_dom.views.text.MSDLabelTextView
                        android:id="@+id/isRentTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:translationLabelKey="Сдается в аренду" />

                    <com.custom.rgs_android_dom.views.text.MSDLabelTextView
                        android:id="@+id/isTemporaryTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:translationLabelKey="Временное проживание" />

                    <com.custom.rgs_android_dom.views.text.MSDLabelTextView
                        android:id="@+id/totalAreaTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:translationLabelKey="Общая площадь" />

                    <com.custom.rgs_android_dom.views.text.MSDLabelTextView
                        android:id="@+id/commentTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:translationLabelKey="Комментарий" />

                </LinearLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rectangle_filled_white_radius_16dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="horizontal">

                        <com.custom.rgs_android_dom.views.text.MSDTextView
                            android:id="@+id/documentsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/suisse_bold"
                            android:textColor="@color/secondary900"
                            android:textSize="16sp"
                            app:translationTextKey="Добавить документы" />

                        <com.custom.rgs_android_dom.views.text.MSDTextView
                            android:id="@+id/allDocumentsTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:fontFamily="@font/suisse_regular"
                            android:textColor="@color/secondary600"
                            android:textSize="14sp"
                            app:translationTextKey="Все" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="204dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/uploadDocumentFrameLayout"
                            android:layout_width="84dp"
                            android:layout_height="116dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/rectangle_stroke_1dp_dashed_secondary_300_radius_8dp">

                            <com.custom.rgs_android_dom.views.MSDImageView
                                android:id="@+id/upload_document_image_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:foregroundGravity="center"
                                android:src="@drawable/ic_plus_romb_30dp" />

                        </FrameLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/listDocumentsRecyclerView"
                            android:layout_width="wrap_content"
                            android:layout_height="116dp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="1"
                            tools:listitem="@layout/item_property_upload_document" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>


