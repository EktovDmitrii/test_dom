<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include
        android:id="@+id/swipeAnchorLayout"
        layout="@layout/layout_bottom_sheet_swipe_anchor"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <com.custom.rgs_android_dom.views.text.MSDTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suisse_book"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="48dp"
            android:textColor="@color/secondary500"
            android:includeFontPadding="false"
            android:gravity="center"
            android:lineSpacingExtra="24dp"
            android:lineSpacingMultiplier="0"
            app:translationTextKey="Разрешите доступ, чтобы консультант или мастер могли слышать вас"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconImageView"
            android:layout_width="wrap_content"
            android:layout_height="232dp"
            app:srcCompat="@drawable/device_microphone"
            android:paddingHorizontal="33dp"
            android:layout_marginTop="24dp"/>

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/actionsBottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_alignParentBottom="true"
            android:paddingHorizontal="20dp"
            android:paddingStart="20dp"
            android:paddingTop="12dp"
            android:paddingEnd="20dp"
            android:paddingBottom="22dp"
            app:contentInsetStart="0dp"
            tools:ignore="BottomAppBar">

            <com.custom.rgs_android_dom.views.text.MSDTextView
                android:id="@+id/openLocationSettingsTextView"
                style="@style/Button.Filled.Primary"
                android:layout_width="match_parent"
                app:translationTextKey="Перейти в настройки" />

        </com.google.android.material.bottomappbar.BottomAppBar>



    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>