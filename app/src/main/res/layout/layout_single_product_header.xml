<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:paddingHorizontal="20dp"
    android:paddingBottom="24dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logoImageView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        tools:src="@drawable/rectangle_filled_lime_radius_16dp"/>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/my_service_bold"
        android:textColor="@color/secondary900"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        tools:text="Сантехника" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suisse_regular"
        android:textColor="@color/secondary900"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        tools:text="Мы оказываем установку унитаза любой модели и сложности: от подвесного унитаза до классической модели." />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suisse_regular"
        android:textColor="@color/secondary600"
        android:letterSpacing="0.12"
        android:textSize="10sp"
        android:textAllCaps="true"
        android:layout_marginTop="24dp"
        app:translationTextKey="стоимость" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/my_service_bold"
        android:textColor="@color/primary500"
        android:textSize="24sp"
        android:layout_marginTop="4dp"
        tools:text="1500 ₽" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suisse_regular"
        android:textColor="@color/secondary600"
        android:letterSpacing="0.12"
        android:textSize="10sp"
        android:textAllCaps="true"
        android:layout_marginTop="28dp"
        android:includeFontPadding="false"
        app:translationTextKey="Преимущества мой_сервис" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="1dp"
        android:layout_gravity="start"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/secondary900_alpha6"
        app:cardCornerRadius="12dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:paddingStart="18dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/secondary600"
                app:srcCompat="@drawable/ic_stars_16px"
                android:layout_gravity="center_vertical"/>

            <com.custom.rgs_android_dom.views.text.MSDTextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:fontFamily="@font/suisse_regular"
                android:textColor="@color/secondary900"
                android:textSize="16sp"
                android:layout_marginStart="30dp"
                android:layout_gravity="center_vertical"
                app:translationTextKey="Договор зафиксирует стоимость" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="start"
        android:layout_marginStart="1dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/secondary900_alpha6"
        app:strokeWidth="1dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:paddingStart="18dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/secondary600"
                app:srcCompat="@drawable/ic_attachment_16px"
                android:layout_gravity="center_vertical"/>

            <com.custom.rgs_android_dom.views.text.MSDTextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:fontFamily="@font/suisse_regular"
                android:textColor="@color/secondary900"
                android:textSize="16sp"
                android:layout_marginStart="30dp"
                android:layout_gravity="center_vertical"
                app:translationTextKey="Гарантия 12 месяцев" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suisse_regular"
        android:textColor="@color/secondary600"
        android:letterSpacing="0.12"
        android:textSize="10sp"
        android:textAllCaps="true"
        android:layout_marginTop="32dp"
        android:includeFontPadding="false"
        app:translationTextKey="Сроки действия и условия" />

    <TextView
        android:id="@+id/usageTermsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suisse_regular"
        android:textColor="@color/secondary900"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"
        tools:text="6 месяцев после покупки" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suisse_regular"
        android:textColor="@color/secondary600"
        android:letterSpacing="0.12"
        android:textSize="10sp"
        android:textAllCaps="true"
        android:layout_marginTop="24dp"
        android:includeFontPadding="false"
        app:translationTextKey="Ограничения по территории действия" />

    <TextView
        android:id="@+id/territoryRestrictionsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suisse_regular"
        android:textColor="@color/secondary900"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"
        tools:text="Москва и Московская область" />

</androidx.appcompat.widget.LinearLayoutCompat>