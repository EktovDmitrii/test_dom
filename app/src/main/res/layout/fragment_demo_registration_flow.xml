<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary100"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/registrationButton"
        android:layout_width="wrap_content"
        style="@style/Button.Filled.Primary"
        app:translationTextKey="Регистрация"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


   <com.custom.rgs_android_dom.views.text.MSDTextView
       android:id="@+id/inputsButton"
       style="@style/Button.Filled.Primary"
       android:layout_width="wrap_content"
       app:translationTextKey="Inputs"
       android:layout_marginTop="10dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/registrationButton"/>

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/buttonsButton"
        style="@style/Button.Filled.Primary"
        android:layout_width="wrap_content"
        app:translationTextKey="Buttons"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputsButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>