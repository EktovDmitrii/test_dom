<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary100"
    android:orientation="vertical"
    android:paddingHorizontal="28dp"
    android:paddingTop="32dp"
    android:paddingBottom="50dp">

    <ImageView
        android:id="@+id/splash_title"
        android:layout_width="216dp"
        android:layout_height="171dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_my_service_dom_splash_title" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/splashText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/suisse_regular"
        android:textColor="@color/secondary500"
        android:textSize="14sp"
        android:lineSpacingExtra="24dp"
        android:lineSpacingMultiplier="0"
        app:translationTextKey="Мой_Сервис Дом — имущественный\nсервис от флагмана отечественного\nстрахования" />

</RelativeLayout>

