<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/secondary100"
    android:orientation="vertical"
    android:paddingHorizontal="28dp"
    android:paddingBottom="50dp"
    android:paddingTop="32dp">

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/my_service_splash_label"
        style="@style/SplashTextTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:translationTextKey="МОЙ___\nСЕРВИС" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/home_splash_label"
        style="@style/SplashTextTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_service_splash_label"
        android:layout_alignParentStart="true"
        android:background="@drawable/home_background"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/secondary100"
        app:translationTextKey="ДОМ" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/rgs_splash_label"
        style="@style/SplashTextTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/slogan_splash_label"
        android:layout_alignParentStart="true"
        android:textColor="@color/secondary500"
        app:translationTextKey="РОСГОССТРАХ" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/slogan_splash_label"
        style="@style/SplashTextSubTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        app:translationTextKey="Мой_Сервис Дом — имущественный сервис от флагмана отечественного рынка страхования" />

</RelativeLayout>

