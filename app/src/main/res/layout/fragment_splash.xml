<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary100"
    android:orientation="vertical"
    android:padding="@dimen/material_margin_large">

    <TextView
        android:id="@+id/my_service_splash_label"
        style="@style/SplashTextTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/my_service_text" />

    <TextView
        android:id="@+id/home_splash_label"
        style="@style/SplashTextTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_service_splash_label"
        android:layout_alignParentStart="true"
        android:background="@drawable/home_background"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/home_text"
        android:textColor="@color/secondary100" />

    <TextView
        android:id="@+id/rgs_splash_label"
        style="@style/SplashTextTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/slogan_splash_label"
        android:layout_alignParentStart="true"
        android:text="@string/rgs_name_text"
        android:textColor="@color/secondary500" />

    <TextView
        android:id="@+id/slogan_splash_label"
        style="@style/SplashTextSubTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="@string/slogan_splash_text" />

</RelativeLayout>

