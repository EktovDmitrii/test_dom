<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cardImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_card_24px"
        android:tint="@color/secondary800"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/includedProductTextView"
        app:layout_constraintBottom_toBottomOf="@id/includedProductTextView"/>

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/includedProductTextView"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="18dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/suisse_semi_bold"
        android:gravity="center_vertical"
        android:textColor="@color/secondary800"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:translationTextKey="Включено в ваш продукт" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/includedProductImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/includedProductTextView"
        tools:srcCompat="@mipmap/newcard"/>

</androidx.constraintlayout.widget.ConstraintLayout>
