<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/codeAgentImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_agent_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/codeAgentTextView"
        app:layout_constraintBottom_toBottomOf="@id/codeAgentTextView"/>

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/codeAgentTextView"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="18dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/suisse_regular"
        android:maxLines="2"
        android:gravity="center_vertical"
        android:textColor="@color/secondary800"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/codeAgentImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:translationTextKey="app.agent_info_edit.agent_code_title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrowRightImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_arrow_right_16dp"
        android:tint="@color/secondary400"
        app:layout_constraintBottom_toBottomOf="@id/codeAgentTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>