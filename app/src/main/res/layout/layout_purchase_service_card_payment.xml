<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="28dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cardPaymentImageView"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_payment_24px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/cardPaymentTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:fontFamily="@font/suisse_bold"
        android:maxLines="2"
        android:textColor="@color/secondary900"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/cardPaymentImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:translationTextKey="Оплата картой" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cardTypeImageView"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintEnd_toStartOf="@id/cardNumberTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/cardNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:fontFamily="@font/suisse_bold"
        android:maxLines="2"
        android:textColor="@color/secondary900"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="9914" />

</androidx.constraintlayout.widget.ConstraintLayout>
