<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_stroke_1dp_secondary_250_radius_8dp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/prefixTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/suisse_regular"
        android:includeFontPadding="false"
        android:textColor="@color/secondary900"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="S"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/valueEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/prefixTextView"
        android:layout_toEndOf="@+id/prefixTextView"
        android:background="@null"
        android:fontFamily="@font/suisse_regular"
        android:includeFontPadding="false"
        android:textColor="@color/secondary900"
        android:textColorHint="@color/secondary300"
        android:textCursorDrawable="@drawable/cursor_primary_500"
        android:textSize="16sp"
        tools:hint="Placeholder" />

</RelativeLayout>