<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical">

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/uploadMediaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_filled_white_radius_13dp"
        android:paddingVertical="18dp"
        android:paddingHorizontal="16dp"
        android:textSize="20sp"
        android:fontFamily="@font/suisse_regular"
        android:textColor="@color/secondary900"
        app:translationTextKey="Фото или Видео"
        android:gravity="center"/>

    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="7.5dp"/>

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/cancelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_filled_white_radius_13dp"
        android:paddingVertical="18dp"
        android:paddingHorizontal="16dp"
        android:fontFamily="@font/my_service_bold"
        android:textSize="20sp"
        android:textColor="@color/secondary900"
        app:translationTextKey="Отмена"
        android:gravity="center"/>

</androidx.appcompat.widget.LinearLayoutCompat>