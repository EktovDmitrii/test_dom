<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/swipeAnchorLayout"
            layout="@layout/layout_bottom_sheet_swipe_anchor" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/suisse_book"
                android:paddingHorizontal="20dp"
                android:text="Дом"
                android:textAlignment="center"
                android:textColor="@color/secondary900"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/suisse_bold"
                android:paddingHorizontal="20dp"
                android:text="Московская обл., Красногорский р-н, д. Путилково, ул.Партизанская 147"
                android:textAlignment="center"
                android:textColor="@color/secondary900"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/propertyLogoImageView"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                tools:srcCompat="@drawable/ic_type_home" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/errorImageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_broken_egg" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/my_service_bold"
            android:paddingHorizontal="20dp"
            android:text="Удалить недвижимость?"
            android:textAlignment="center"
            android:textColor="@color/secondary900"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/subtitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/suisse_regular"
            android:paddingHorizontal="20dp"
            android:textAlignment="center"
            android:textColor="@color/secondary600"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="К этой недвижимости привязан ваш\nдействующий страховой полис, поэтому\nеё нельзя удалить самостоятельно."
            tools:visibility="visible" />

        <com.custom.rgs_android_dom.views.text.MSDTextViewLoaderFullWidth
            android:id="@+id/deletePropertyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="24dp"
            app:translationTextKey="app.document.yes_delete" />

        <com.custom.rgs_android_dom.views.text.MSDTextViewLoaderFullWidth
            android:id="@+id/contactMasterOnlineTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="24dp"
            android:visibility="gone"
            app:translationTextKey="Написать Онлайн Мастеру"
            tools:visibility="visible" />

        <com.custom.rgs_android_dom.views.text.MSDTextViewLoaderFullWidth
            android:id="@+id/tryAgainTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="24dp"
            android:visibility="gone"
            app:translationTextKey="Попробовать ещё раз"
            tools:visibility="visible" />

        <com.custom.rgs_android_dom.views.text.MSDTextView
            android:id="@+id/closeTextView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="22dp"
            android:fontFamily="@font/my_service_bold"
            android:gravity="center"
            android:textColor="@color/primary500"
            android:textSize="14sp"
            app:translationTextKey="Нет, спасибо" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>

