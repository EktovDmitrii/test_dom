<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="28dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sampleImageView"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_time_16px" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/sampleNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:fontFamily="@font/suisse_regular"
        android:maxLines="2"
        android:textColor="@color/secondary900"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/sampleImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Выберите дату и время " />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrowRightImageView"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_arrow_right_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
