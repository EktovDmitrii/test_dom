<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_filled_secondary_100_top_radius_24dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:background="@drawable/rectangle_filled_white_radius_24dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary100"
                android:overScrollMode="never"
                android:paddingVertical="16dp"
                android:scrollbars="none">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/signInLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_sign_in_60dp" />

                        <com.custom.rgs_android_dom.views.text.MSDTextView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/suisse_regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:textColor="@color/gray"
                            android:textSize="13sp"
                            app:translationTextKey="Войти" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/profileLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_profile_60dp" />

                        <com.custom.rgs_android_dom.views.text.MSDTextView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/suisse_regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:textColor="@color/gray"
                            android:textSize="13sp"
                            app:translationTextKey="Профиль" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/promoLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_percent_60dp" />

                        <com.custom.rgs_android_dom.views.text.MSDTextView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/suisse_regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:textColor="@color/gray"
                            android:textSize="13sp"
                            app:translationTextKey="Промо" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/sosLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_broken_dish_60dp" />

                        <com.custom.rgs_android_dom.views.text.MSDTextView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/suisse_regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:textColor="@color/gray"
                            android:textSize="13sp"
                            app:translationTextKey="SOS" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/policy3LinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_policy_60dp" />

                        <com.custom.rgs_android_dom.views.text.MSDTextView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/suisse_regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:textColor="@color/gray"
                            android:textSize="13sp"
                            app:translationTextKey="Полисы" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/policy2LinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_policy_60dp" />

                        <com.custom.rgs_android_dom.views.text.MSDTextView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/suisse_regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:textColor="@color/gray"
                            android:textSize="13sp"
                            app:translationTextKey="Полисы" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/policyLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_policy_60dp" />

                        <com.custom.rgs_android_dom.views.text.MSDTextView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/suisse_regular"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:textColor="@color/gray"
                            android:textSize="13sp"
                            app:translationTextKey="Полисы" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </HorizontalScrollView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:background="@drawable/rectangle_filled_white_radius_24dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>