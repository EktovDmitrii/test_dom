<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.purchase_service.add_purchase_service_email.EditPurchaseServiceEmailFragment">

    <include
        android:id="@+id/swipeAnchorLayout"
        layout="@layout/layout_bottom_sheet_swipe_anchor" />

    <com.custom.rgs_android_dom.views.edit_text.MSDTextInputLayout
        android:id="@+id/mailTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:imeOptions="actionDone"
        android:maxLength="25"
        app:isFocused="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/addressSecondaryTextView"
        app:layout_constraintTop_toBottomOf="@+id/addressSecondaryTextView"
        app:translationHintKey="Введите почту для чека"
        app:unfocusOnDone="true" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/saveTextView"
        style="@style/Button.Filled.Primary"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        android:enabled="false"
        app:translationTextKey="Сохранить" />

</androidx.appcompat.widget.LinearLayoutCompat>
