<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="end"
            android:layout_marginEnd="12dp"
            app:srcCompat="@drawable/image_info_window_corner_over_info_text" />

        <com.custom.rgs_android_dom.views.text.MSDTextView
            android:id="@+id/textTextView"
            android:layout_width="192dp"
            android:layout_height="78dp"
            android:background="@drawable/rectangle_filled_white_radius_6dp"
            android:fontFamily="@font/suisse_regular"
            android:lineSpacingExtra="20sp"
            android:lineSpacingMultiplier="0"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textColor="@color/secondary500"
            android:textSize="13sp"
            app:translationTextKey="Понадобится для формирования страхового полиса" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>


