<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/textTextView"
        android:layout_width="192dp"
        android:layout_height="78dp"
        android:background="@drawable/rectangle_filled_white_radius_6dp"
        android:fontFamily="@font/suisse_regular"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textColor="@color/secondary500"
        android:textSize="13sp"
        app:lineHeight="20sp"

        app:translationTextKey="Понадобится для\nформирования\nстрахового полиса" />

    <com.custom.rgs_android_dom.views.MSDImageView
        android:id="@+id/cornerImageView"
        android:layout_width="32dp"
        android:layout_height="8dp"
        android:layout_gravity="end"
        app:srcCompat="@drawable/image_info_window_corner_below_info_text" />

</androidx.appcompat.widget.LinearLayoutCompat>

