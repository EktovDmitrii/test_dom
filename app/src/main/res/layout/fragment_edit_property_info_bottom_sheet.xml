<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.property.info.EditPropertyBottomSheetFragment">

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/editPropertyInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="18dp"
        android:textColor="@color/secondary900"
        android:textSize="20sp"
        app:translationTextKey="Редактировать недвижимость" />

    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/secondary200" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/deletePropertyInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="18dp"
        android:textColor="@color/error500"
        android:textSize="20sp"
        app:translationTextKey="Удалить недвижимость" />

</androidx.appcompat.widget.LinearLayoutCompat>
