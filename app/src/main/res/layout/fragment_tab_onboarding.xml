<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tabImageView"
        android:layout_width="103dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/onboarding_0_1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tab2ImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/onboarding_0_3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tab1ImageView"
        android:layout_width="150dp"
        android:layout_height="290dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/onboarding_0_2" />


    <androidx.constraintlayout.widget.Group
        android:id="@+id/tabGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tabImageView, tab1ImageView, tab2ImageView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tabOneImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/onboarding_1_1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tabOne2ImageView"
        android:layout_width="62dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabOneImageView"
        app:srcCompat="@mipmap/onboarding_1_2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tabOne3ImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/tabOneImageView"
        app:layout_constraintTop_toBottomOf="@id/tabOneImageView"
        app:srcCompat="@mipmap/onboarding_1_3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tabOne4ImageView"
        android:layout_width="81dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tabOne2ImageView"
        app:srcCompat="@mipmap/onboarding_1_4" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tabOne5ImageView"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabTitleTextView"
        app:srcCompat="@mipmap/onboarding_1_5"

        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tabOne6ImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="62dp"
        app:layout_constraintStart_toEndOf="@id/tabOne5ImageView"
        app:layout_constraintTop_toTopOf="@id/tabOne5ImageView"
        app:srcCompat="@mipmap/onboarding_1_6" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tabOne7ImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tabOne5ImageView"
        app:srcCompat="@mipmap/onboarding_1_7" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/tabOneGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tabOneImageView, tabOne2ImageView, tabOne3ImageView, tabOne4ImageView,
        tabOne5ImageView, tabOne6ImageView, tabOne7ImageView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tabTwoImageView"
        android:layout_width="wrap_content"
        android:layout_height="255dp"
        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/onboarding_2_1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tabTwo2ImageView"
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/onboarding_2_2" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/tabTwoGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tabTwoImageView, tabTwo2ImageView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tabThreeImageView"
        android:layout_width="181dp"
        android:layout_height="95dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@id/tabTitleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/onboarding_3_1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tabThree2ImageView"
        android:layout_width="262dp"
        android:layout_height="315dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/onboarding_3_2" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/tabThreeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tabThreeImageView, tabThree2ImageView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tabFourImageView"
        android:layout_width="0dp"
        android:layout_height="360dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="110dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/onboarding_4" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/tabTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/my_service_bold"
        android:gravity="center"
        android:textColor="@color/secondary900"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabFourImageView"
        app:layout_constraintVertical_bias="0.5"
        tool:text="Удобный сервис\nдля домашних дел" />

</androidx.constraintlayout.widget.ConstraintLayout>