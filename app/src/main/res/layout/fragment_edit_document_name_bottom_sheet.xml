<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.property.document.edit_document_name.EditDocumentNameBottomSheetFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <com.custom.rgs_android_dom.views.edit_text.MSDTextInputLayout
            android:id="@+id/documentNameTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:imeOptions="actionDone"
            android:maxLength="25"
            app:focusedTranslationHintKey="Введите новое название"
            app:isFocused="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/addressSecondaryTextView"
            app:layout_constraintTop_toBottomOf="@+id/addressSecondaryTextView"
            app:translationHintKey="Нажмите, чтобы ввести новое название"
            app:unfocusOnDone="true" />

        <com.custom.rgs_android_dom.views.text.MSDTextView
            android:id="@+id/saveTextView"
            style="@style/Button.Filled.Primary"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:enabled="false"
            app:translationTextKey="Сохранить" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</ScrollView>
