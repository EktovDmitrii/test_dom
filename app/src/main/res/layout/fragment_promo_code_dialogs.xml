<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <include
        android:id="@+id/swipeAnchorLayout"
        layout="@layout/layout_bottom_sheet_swipe_anchor" />

    <include
        android:id="@+id/loadingLayout"
        layout="@layout/layout_promo_codes_dialogs_loading"
        android:visibility="gone" />

    <include
        android:id="@+id/bindPolicySuccessLayout"
        layout="@layout/layout_promo_codes_dialogs_success"
        android:visibility="gone" />

    <include
        android:id="@+id/bindPolicyFailureLayout"
        layout="@layout/layout_promo_codes_dialogs_binding_failure"
        android:visibility="gone" />

</androidx.appcompat.widget.LinearLayoutCompat>