<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <include
        android:id="@+id/swipeAnchorLayout"
        layout="@layout/layout_bottom_sheet_swipe_anchor" />

    <com.custom.rgs_android_dom.views.edit_text.MSDTextInputLayout
        android:id="@+id/commentTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:imeOptions="actionDone"
        app:isFocused="true"
        android:inputType="textMultiLine"
        android:maxLength="500"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:translationHintKey="Добавьте комментарий"
        app:placeholderText="Начните добавлять комментарий"
        app:unfocusOnDone="true" />

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/saveTextView"
        style="@style/Button.Filled.Primary"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:enabled="false"
        app:translationTextKey="Добавить комментарий" />

</androidx.appcompat.widget.LinearLayoutCompat>
