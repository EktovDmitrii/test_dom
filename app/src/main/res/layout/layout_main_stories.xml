<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="24dp">

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/newServiceLinearLayout"
        android:layout_width="106dp"
        android:layout_height="128dp"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        android:background="@drawable/rectangle_filled_isabelline_radius_20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/newServiceImageView"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="20dp"
            app:srcCompat="@drawable/ic_new_service_65px" />

        <com.custom.rgs_android_dom.views.text.MSDTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="14dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/my_service_medium"
            android:textSize="12sp"
            android:textColor="@color/secondary800"
            android:lineSpacingExtra="16sp"
            android:lineSpacingMultiplier="0"
            app:translationTextKey="Новый сервис"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/guaranteeLinearLayout"
        android:layout_width="106dp"
        android:layout_height="128dp"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        android:background="@drawable/rectangle_filled_isabelline_radius_20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="20dp"
            app:srcCompat="@drawable/ic_guarantee_65px" />

        <com.custom.rgs_android_dom.views.text.MSDTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="14dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/my_service_medium"
            android:textSize="12sp"
            android:textColor="@color/secondary800"
            android:lineSpacingExtra="16sp"
            android:lineSpacingMultiplier="0"
            app:translationTextKey="Гарантия на работу"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/supportLinearLayout"
        android:layout_width="106dp"
        android:layout_height="128dp"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        android:background="@drawable/rectangle_filled_isabelline_radius_20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="20dp"
            app:srcCompat="@drawable/ic_support_65px" />

        <com.custom.rgs_android_dom.views.text.MSDTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="13dp"
            android:gravity="center|top"
            android:fontFamily="@font/my_service_medium"
            android:textSize="12sp"
            android:textColor="@color/secondary800"
            android:includeFontPadding="false"
            android:lineSpacingExtra="16sp"
            android:lineSpacingMultiplier="0"
            app:translationTextKey="Поддержка 24/7"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</androidx.appcompat.widget.LinearLayoutCompat>