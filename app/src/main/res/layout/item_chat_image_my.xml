<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="167dp"
    android:layout_marginTop="12dp"
    android:paddingEnd="8dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_filled_primary_500_radius_16dp">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rectangle_filled_white_alpha32_radius_8dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/doctypeImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:tint="@color/white"
                tools:src="@drawable/ic_default_file"/>

        </FrameLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/docNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suisse_semi_bold"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="Договор страхования.pdf" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sizeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/suisse_regular"
                    android:textColor="@color/primary100"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    tools:text="3mb" />

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/suisse_regular"
                    android:textColor="@color/primary100"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    tools:text="21:22" />

            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>