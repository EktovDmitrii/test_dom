<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp">

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/priceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suisse_regular"
        android:textAllCaps="true"
        android:textColor="@color/secondary600"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:translationTextKey="Стоимость" />

    <androidx.cardview.widget.CardView
        android:id="@+id/priceIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="start"
        android:layout_marginStart="1dp"
        android:layout_marginTop="6dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/priceTitle"
        app:strokeColor="@color/secondary900_alpha6"
        app:strokeWidth="1dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_catalog_primary_unit_letter_h_24dp" />
    </androidx.cardview.widget.CardView>

    <com.custom.rgs_android_dom.views.text.MSDTextView
        android:id="@+id/priceValue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/suisse_semi_bold"
        android:gravity="center_vertical"
        android:textColor="@color/secondary900"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/priceIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/priceIcon"
        app:layout_constraintTop_toTopOf="@id/priceIcon"
        app:translationTextKey="Включено в продукт" />

</androidx.constraintlayout.widget.ConstraintLayout>